<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/mv_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/mcdouble"
        />

    <TextView
        android:id="@+id/mv_name_text"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:textSize="18.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.80"
        app:layout_constraintStart_toEndOf="@id/mv_img"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/mv_calorie"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="calorie"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mv_name_text"
        app:layout_constraintTop_toBottomOf="@+id/mv_name_text" />

    <CheckBox
        android:id="@+id/mv_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toEndOf="@+id/mv_calorie"
        app:layout_constraintTop_toTopOf="parent"
        android:checked="false"/>



</androidx.constraintlayout.widget.ConstraintLayout>